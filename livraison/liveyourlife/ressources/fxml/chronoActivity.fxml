<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.unice.polytech.si3.g2projet3.liveyourlife.controller.ChronoActivityController">
    <top>
        <Label fx:id="activityName" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
            <ListView fx:id="pickedActions" orientation="HORIZONTAL" />
            <ListView fx:id="availableActions" orientation="HORIZONTAL" />
        </VBox>
    </center>
    <bottom>
        <Label fx:id="activityDescription" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>
