<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.102"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.unice.polytech.si3.g2projet3.liveyourlife.controller.ShuffleActivityController">
    <top>
        <Label fx:id="activityName" BorderPane.alignment="CENTER">
        </Label>
    </top>
    <center>
        <BorderPane BorderPane.alignment="CENTER" maxHeight="350">
            <center>
                <HBox spacing="150" maxWidth="0">
                    <ImageView fx:id="contextImage"
                               fitHeight="250" fitWidth="500" pickOnBounds="true" preserveRatio="true"/>
                    <ImageView fx:id="currentStateImage"
                               fitHeight="250" fitWidth="250" pickOnBounds="true" preserveRatio="true"/>
                </HBox>
            </center>
            <bottom>
                <ListView fx:id="availableActions" orientation="HORIZONTAL" prefHeight="200" maxHeight="200" />
            </bottom>
        </BorderPane>
    </center>
    <bottom>
        <Label fx:id="activityDescription" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
