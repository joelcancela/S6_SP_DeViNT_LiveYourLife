<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.102"
            xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Text fx:id="activityName" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <BorderPane prefHeight="200.0" prefWidth="100.0">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="30.0"/>
            </BorderPane.margin>
            <left>
                <ImageView fx:id="contextImage"
                           fitHeight="200.0" fitWidth="346.0" pickOnBounds="true" preserveRatio="true"/>
            </left>
            <right>
                <ImageView fx:id="currentStateImage"
                           fitHeight="175.0" fitWidth="201.0" pickOnBounds="true" preserveRatio="true"/>
            </right>
        </BorderPane>
    </center>
    <bottom>
        <VBox prefHeight="147.0" prefWidth="600.0" spacing="10" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
            <Text fx:id="actionType"/>
            <ListView prefHeight="200.0" prefWidth="200.0"/>
        </VBox>
    </bottom>
</BorderPane>
